class Solution {
public:
    int maxArea(vector<int>& height) {
        int max_area = 0;
        
        //i,j为左右标
        int i = 0, j = height.size() - 1;
        while (i < j){
            int new_area =  min(height[j], height[i]) * (j - i);
            max_area = max(max_area, new_area);
            if (height[j] > height[i]) i++;
            else j--;
        }
        
        return max_area;
    }
};
